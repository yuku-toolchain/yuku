{
  "name": "yuku-root",
  "private": true,
  "type": "module",
  "scripts": {
    "build:npm": "zig build && bun run --filter './npm/**/*' build",
    "dev:docs": "bun run --filter './docs' dev",
    "test:tools": "zig build test-tools",
    "test": "bun load-test-suite -b test262 && bun build:npm && bun test/run.ts",
    "publish:npm": "bumpp -r --commit 'npm %s' --push --tag --yes --release 'patch'",
    "format": "zig fmt **/*.zig",
    "load-test-suite": "bun test/load.ts test/suite",
    "bench": "vitest bench --run"
  },
  "devDependencies": {
    "@codspeed/vitest-plugin": "^5.2.0",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.10",
    "bumpp": "^10.4.1",
    "fast-deep-equal": "^3.1.3",
    "jest-diff": "^30.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "workspaces": [
    "npm/**/*",
    "docs"
  ]
}
