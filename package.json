{
  "name": "yuku-root",
  "private": true,
  "scripts": {
    "build:npm": "zig build && bun run --filter './npm' build",
    "dev:docs": "bun run --filter './docs' dev",
    "test": "bun run build:npm && bun test/run.ts",
    "release:npm": "bumpp -r --commit --push --tag"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "bumpp": "^10.3.2",
    "fast-deep-equal": "^3.1.3",
    "jest-diff": "^30.2.0",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "npm",
    "docs"
  ]
}
